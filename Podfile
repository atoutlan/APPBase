platform :ios, '9.0'
target 'APPBase' do
  #取消第三方框架中的黄色警告
  inhibit_all_warnings!
  use_frameworks!

#***************** 常用第三方框架**************
pod 'AFNetworking','~>3.2.1'
#刷新控件
pod 'MJRefresh' , '~>3.1'
#约束1
pod 'Masonry','~>1.1'
#约束2
pod 'SDAutoLayout','~>2.1'
#缓存框架
pod 'YYCache','~>1.0.4'
pod 'MMKV', '~>1.0.18'#腾讯缓存框架
#模型转换
pod 'YYModel','~>1.0.4'
#提示框
pod 'MBProgressHUD','~>1.1.0'
#加载图片
pod 'SDWebImage','~>4.0.0'
# 集成VC日志输出
pod 'Aspects', '~> 1.4.1'
#系统键盘控制
pod 'IQKeyboardManager'
#APP崩溃检测
pod 'AvoidCrash', '~> 2.5.2'
#FMDB数据库
pod 'FMDB/SQLCipher', '~> 2.5'

#***************** 第三方功能框架引入**************
#bug追踪
#pod 'Bugly','~>2.5.0'

#bug追踪 & 热更新 已集成JSPatch
#pod 'BuglyHotfix','~>2.1.0'

#RAC 数据绑定框架
pod 'ReactiveObjC', '~>3.1.1'

end

